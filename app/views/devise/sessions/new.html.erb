
<div class="container">
   <div class="row row-centered">
      <div class="col-md-4 col-center">


<h2>Iniciar sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "correo" %><br />
    <%= f.email_field :email, autofocus: true,class:"form-control", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "contraseña" %><br />
    <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Iniciar sesion",class:"btn btn-success"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

      </div>
  </div>
</div>

