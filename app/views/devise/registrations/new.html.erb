
<div class="container text-center">
 
      <div class="col-md-4">


  <h2>Registrarse</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, "correo" %><br />
      <%= f.email_field :email, autofocus: true,class:"form-control", autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "contraseÃ±a" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres minimos)</em>
      <% end %><br />
      <%= f.password_field :password,class:"form-control", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "confirmar contraseÃ±a" %><br />
      <%= f.password_field :password_confirmation,class:"form-control", autocomplete: "new-password" %>
    </div>
<br>
    <div class="actions">
      <%= f.submit "Sign up" ,class:"btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

    </div>

</div>